
<%- include("partials/header"); -%>

    <h1>POSTS</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    <form action="delete" method="post"><button type="submit" name="removePost" value="<%=post._id%>">DELETE</button></form>
    </p>


    <% }) %>


